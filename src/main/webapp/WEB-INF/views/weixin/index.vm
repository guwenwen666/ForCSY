	<body ontouchstart>
		<div class="main">
			<img class="mainBg" src="${springPath}/static/img/weixin/index_main.png"/>
			
			<div class="button-sp-area">
                <a href="./kckp" class="weui-btn btn1" target="_blank"><span class='content'>新增快处快赔</span></a>
				<a href="./myRecord" class="weui-btn btn2" target="_blank"><span class='content'>我的报案记录</span></a>
            </div>
			<div class="weui-footer">
                <p class="weui-footer__links">
					<a href="#" id="button_showIn" class="weui-footer__link">使用需知</a>
                    <a href="${springPath}/wx/fkyj/index" class="weui-footer__link">意见反馈</a>
                </p>
